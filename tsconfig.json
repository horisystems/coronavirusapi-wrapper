{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "moduleResolution": "node",
    "lib": [
      "ES5",
      "DOM",
      "ES2015.Promise",
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "*/__tests__/**"
  ]
}